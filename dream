    { value: "Leo", emoji: "â™Œ", element: "Fuego", dates: "23 Jul - 22 Ago" },
    { value: "Virgo", emoji: "â™", element: "Tierra", dates: "23 Ago - 22 Sep" },
    { value: "Libra", emoji: "â™Ž", element: "Aire", dates: "23 Sep - 22 Oct" },
    { value: "Escorpio", emoji: "â™", element: "Agua", dates: "23 Oct - 21 Nov" },
    { value: "Sagitario", emoji: "â™", element: "Fuego", dates: "22 Nov - 21 Dic" },
    { value: "Capricornio", emoji: "â™‘", element: "Tierra", dates: "22 Dic - 19 Ene" },
    { value: "Acuario", emoji: "â™’", element: "Aire", dates: "20 Ene - 18 Feb" },
    { value: "Piscis", emoji: "â™“", element: "Agua", dates: "19 Feb - 20 Mar" }
  ]
