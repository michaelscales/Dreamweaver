};

const ZODIAC_SIGNS = {
  "en-US": [
    { value: "Aries", emoji: "â™ˆ", element: "Fire", dates: "Mar 21 - Apr 19" },
    { value: "Taurus", emoji: "â™‰", element: "Earth", dates: "Apr 20 - May 20" },
    { value: "Gemini", emoji: "â™Š", element: "Air", dates: "May 21 - Jun 20" },
    { value: "Cancer", emoji: "â™‹", element: "Water", dates: "Jun 21 - Jul 22" },
    { value: "Leo", emoji: "â™Œ", element: "Fire", dates: "Jul 23 - Aug 22" },
    { value: "Virgo", emoji: "â™", element: "Earth", dates: "Aug 23 - Sep 22" },
    { value: "Libra", emoji: "â™Ž", element: "Air", dates: "Sep 23 - Oct 22" },
    { value: "Scorpio", emoji: "â™", element: "Water", dates: "Oct 23 - Nov 21" },
    { value: "Sagittarius", emoji: "â™", element: "Fire", dates: "Nov 22 - Dec 21" },
    { value: "Capricorn", emoji: "â™‘", element: "Earth", dates: "Dec 22 - Jan 19" },
    { value: "Aquarius", emoji: "â™’", element: "Air", dates: "Jan 20 - Feb 18" },
    { value: "Pisces", emoji: "â™“", element: "Water", dates: "Feb 19 - Mar 20" }
  ],
  "es-ES": [
    { value: "Aries", emoji: "â™ˆ", element: "Fuego", dates: "21 Mar - 19 Abr" },
    { value: "Tauro", emoji: "â™‰", element: "Tierra", dates: "20 Abr - 20 May" },
